<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/movie_nav"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/home2"
        android:name="com.eb.movieapp.screens.home.Home"
        android:label="Home" >
        <action
            android:id="@+id/action_home2_to_movieDetail"
            app:destination="@id/movieDetail" />
    </fragment>
    <fragment
        android:id="@+id/movieDetail"
        android:name="com.eb.movieapp.screens.detail.MovieDetail"
        android:label="MovieDetail" >
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
</navigation>